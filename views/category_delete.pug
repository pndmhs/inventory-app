extends layout

block content

  h1 #{title}: #{category.name}

  p #[strong Description:] #{category.desc}
  
  if category_games.length

    p #[strong Delete the following games before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Games

      dl
        each game in category_games
          dt
            a(href=game.url) #{game.title}
          dd #{game.desc}
  else 
    p Do you really want to delete this Category?

    form(method='POST')
      div.form-group
        input#id.form-control(type='hidden',name='id', value=category._id )

      button.btn.btn-primary(type='submit') Delete