extends layout

block content
  h1 Title: #{game.title}

  p #[strong Price: ] $#{game.price}
  p #[strong Description:] #{game.desc}
  p #[strong Available copies:] #{game.stockNumber}
  p #[strong Category: ]
    each val, index in game.category
      a(href=val.url) #{val.name}
      if index < game.category.length - 1
        |,&nbsp;
        
  hr
  p
    a(href=game.url+'/delete') Delete Game
  p
    a(href=game.url+'/update') Update Game