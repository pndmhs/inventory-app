extends layout

block content

  h1 #{title}: #{game.title}

  p #[strong Description:] #{game.desc}
  p #[strong Price:] $#{game.price}
  p #[strong Available copies:] #{game.stockNumber}
  p #[strong Category: ]
    each val, index in game.category
      a(href=val.url) #{val.name}
      if index < game.category.length - 1
        |,&nbsp;

  hr

  p Do you really want to delete this Game?

  form(method='POST')
    div.form-group
      input#id.form-control(type='hidden',name='id', value=game._id )

    button.btn.btn-primary(type='submit') Delete